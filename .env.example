# NelsonGPT Configuration

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE=your_supabase_service_role_key

# CSRF Protection (required)
CSRF_SECRET=your_32_character_random_string

# Encryption Key for BYOK (Bring Your Own Key) functionality
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
ENCRYPTION_KEY=your_base64_encoded_32_byte_key

# App Configuration
NEXT_PUBLIC_APP_NAME=NelsonGPT

# Mistral API Key (Primary AI Provider for NelsonGPT)
MISTRAL_API_KEY=your_mistral_api_key

# Optional: Other AI Model API Keys (if you want to extend functionality)
OPENAI_API_KEY=sk-your_openai_api_key
GOOGLE_GENERATIVE_AI_API_KEY=your_gemini_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Ollama Configuration (for local AI models - optional)
OLLAMA_BASE_URL=http://localhost:11434

# Production Configuration (optional)
NEXT_PUBLIC_VERCEL_URL=your_production_domain

# Development Tools (optional)
ANALYZE=false
